{
  "compilerOptions": {
    "lib": ["es2018"],
    "module": "commonjs",
    "target": "es2018",
    "outDir": "./dist",

    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "skipLibCheck": true,
    "paths": {
      "@base": ["nodes/flowctrl/base"],
      "@base/*": ["nodes/flowctrl/base/*"],
      "@climate/*": ["nodes/helper/climate/*"],
      "@control/*": ["nodes/helper/control/*"],
      "@flowctrl/*": ["nodes/flowctrl/*"],
      "@helper/*": ["nodes/helper/*"],
      "@helpers/*": ["helpers/*"],
      "@light/*": ["nodes/helper/light/*"],
      "@logical/*": ["nodes/logical/*"],
      "@match-join": ["nodes/flowctrl/match-join"],
      "@match-join/*": ["nodes/flowctrl/match-join/*"],
      "@nodes/*": ["nodes/*"],
      "@notification/*": ["nodes/helper/notification/*"],
      "@operator/*": ["nodes/operator/*"],
      "@version": ["version"]
    }
  },

  "include": ["./src/**/*.js", "./src/**/*.ts"]
}
